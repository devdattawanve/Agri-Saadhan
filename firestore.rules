rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // =================================
    // HELPER FUNCTIONS
    // =================================
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    // Securely checks if a user is a verified Sahayak.
    // Uses exists() to prevent errors on non-existent documents.
    function isVerifiedSahayak(userId) {
      return isSignedIn() &&
             exists(/databases/$(database)/documents/users/$(userId)) &&
             get(/databases/$(database)/documents/users/$(userId)).data.sahayakStatus == 'VERIFIED';
    }

    // Checks if the requesting user's UID is in the booking's participants array.
    function isBookingParticipant(booking) {
        return request.auth.uid in booking.participants;
    }
    
    // Validates that the ownerId in new booking data matches the actual owner of the equipment.
    // Includes an exists() check to prevent errors on non-existent documents.
    function isCorrectEquipmentOwner(bookingData) {
        let equipmentPath = /databases/$(database)/documents/equipment/$(bookingData.equipmentId);
        return exists(equipmentPath) && 
               get(equipmentPath).data.ownerId == bookingData.ownerId;
    }

    // Validates that the participants array in new booking data is correctly formed.
    function hasValidParticipants(bookingData) {
      return request.auth.uid in bookingData.participants &&
             bookingData.beneficiary in bookingData.participants &&
             bookingData.ownerId in bookingData.participants;
    }

    // =================================
    // COLLECTION RULES
    // =================================

    // USERS
    match /users/{userId} {
      allow read: if isSignedIn();
      allow write: if isOwner(userId); // Covers create, update, delete
      allow list: if isVerifiedSahayak(request.auth.uid); // Sahayaks can list users
    }
    
    // EQUIPMENT
    match /equipment/{equipmentId} {
        allow read: if isSignedIn();
        // User can only create equipment listings for themselves.
        allow create: if isSignedIn() && request.resource.data.ownerId == request.auth.uid;
        // Only the owner can update or delete their own listing.
        allow update, delete: if isSignedIn() && resource.data.ownerId == request.auth.uid;
    }

    // BOOKINGS
    match /bookings/{bookingId} {
      // READ/LIST: User must be in the 'participants' array.
      // List queries must use an 'array-contains' filter on the participants field.
      allow get: if isSignedIn() && isBookingParticipant(resource.data);
      allow list: if isSignedIn() && request.query.where.participants.hasAny([request.auth.uid]);
      
      // CREATE: Strict validation for new bookings.
      allow create: if isSignedIn()
                      // 1. Creator must be the authenticated user.
                      && request.resource.data.createdBy == request.auth.uid
                      // 2. Initial status must be 'pending'.
                      && request.resource.data.status == 'pending'
                      // 3. The booking data must correctly reference the equipment's true owner.
                      && isCorrectEquipmentOwner(request.resource.data)
                      // 4. The participants array must be correctly formed.
                      && hasValidParticipants(request.resource.data)
                      // 5. The booking is either for the creator OR created by a verified agent.
                      // Uses a ternary operator to safely avoid the Firestore || short-circuiting issue.
                      && (request.resource.data.beneficiary == request.auth.uid ? true : isVerifiedSahayak(request.auth.uid));

      // UPDATE: Different actors have different update permissions.
      // We use separate `allow update` statements which Firestore evaluates with an OR.
      
      // Rule 1: The owner can confirm/reject a pending booking.
      allow update: if isSignedIn()
                      && request.auth.uid == resource.data.ownerId
                      && resource.data.status == 'pending'
                      && (request.resource.data.status == 'confirmed' || request.resource.data.status == 'rejected')
                      && request.resource.data.diff(resource.data).affectedKeys().hasOnly(['status', 'updatedAt']);

      // Rule 2: The creator can cancel a pending booking.
      allow update: if isSignedIn()
                      && request.auth.uid == resource.data.createdBy
                      && resource.data.status == 'pending'
                      && request.resource.data.status == 'cancelled'
                      && request.resource.data.diff(resource.data).affectedKeys().hasOnly(['status', 'updatedAt']);
      
      // Disallow deletion to maintain booking history.
      allow delete: if false;
    }
  }
}
