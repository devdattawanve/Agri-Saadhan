rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    match /users/{userId} {
      allow read: if isSignedIn();
      allow write: if isOwner(userId);
    }
    
    match /equipment/{equipmentId} {
      allow get: if isSignedIn();
      allow list: if isSignedIn();
      allow create: if isSignedIn() && request.resource.data.ownerId == request.auth.uid;
      allow update, delete: if isSignedIn() && resource.data.ownerId == request.auth.uid;
    }

    match /bookings/{bookingId} {
      // A user can GET a single booking if they are the owner OR a participant.
      allow get: if isSignedIn() && (request.auth.uid == resource.data.ownerId || request.auth.uid in resource.data.participants);
      
      // A user can LIST bookings. The client-side query is responsible for filtering
      // to only show bookings where the user is a participant.
      // This rule is required because `list` operations cannot inspect `resource.data`.
      allow list: if isSignedIn();

      // An authenticated user can create a booking request.
      // - The creator must be the one making the request.
      // - The status must be 'pending' on creation.
      // - The creator must be listed in the participants array.
      allow create: if isSignedIn()
                      && request.auth.uid == request.resource.data.createdBy
                      && request.resource.data.status == 'pending'
                      && request.auth.uid in request.resource.data.participants;

      // Update rules for bookings
      allow update: if isSignedIn() && (
          // Case 1: Owner accepts/rejects a PENDING request.
          (
            resource.data.status == 'pending' &&
            request.auth.uid == resource.data.ownerId &&
            (request.resource.data.status == 'accepted' || request.resource.data.status == 'rejected') &&
            // OTP is no longer written here
            request.resource.data.diff(resource.data).affectedKeys().hasOnly(['status', 'updatedAt', 'statusChangeAcknowledged'])
          ) ||
          // Case 2: Creator cancels their own PENDING request
          (
            resource.data.status == 'pending' &&
            request.auth.uid == request.resource.data.createdBy &&
            request.resource.data.status == 'cancelled' &&
            request.resource.data.diff(resource.data).affectedKeys().hasOnly(['status', 'updatedAt', 'statusChangeAcknowledged'])
          ) ||
          // Case 3: A participant acknowledges a status change after it's no longer pending
          (
            request.auth.uid in resource.data.participants &&
            (resource.data.status == 'accepted' || resource.data.status == 'rejected') &&
            request.resource.data.diff(resource.data).affectedKeys().hasOnly(['statusChangeAcknowledged', 'updatedAt'])
          ) ||
           // NEW Case: Farmer initiates completion from ACCEPTED state
          (
            resource.data.status == 'accepted' &&
            request.auth.uid == resource.data.farmerId &&
            request.resource.data.status == 'completion_pending' &&
            request.resource.data.diff(resource.data).affectedKeys().hasOnly(['status', 'updatedAt', 'completionOtp'])
          ) ||
           // MODIFIED Case 4: Owner completes a COMPLETION_PENDING booking
          (
            resource.data.status == 'completion_pending' &&
            request.auth.uid == resource.data.ownerId &&
            request.resource.data.status == 'completed' &&
            request.resource.data.diff(resource.data).affectedKeys().hasOnly(['status', 'updatedAt'])
          ) ||
          // Case 5: Farmer submits a rating for a COMPLETED booking.
          (
            resource.data.status == 'completed' &&
            request.auth.uid == resource.data.farmerId &&
            // Allow setting rating for the first time
            !('rating' in resource.data) &&
            // Ensure the core 'rating' and 'updatedAt' fields are being updated.
            request.resource.data.diff(resource.data).affectedKeys().hasAll(['rating', 'updatedAt']) &&
            // Allow an optional 'ratingDescription' but nothing else.
            request.resource.data.diff(resource.data).affectedKeys().size() <= 3
          )
        );
      
      // Bookings should not be deleted to maintain history.
      allow delete: if false;
    }
  }
}
