rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    // A Sahayak is a user with their sahayakStatus field set to 'VERIFIED'
    function isVerifiedSahayak(userId) {
      return isSignedIn() && get(/databases/$(database)/documents/users/$(userId)).data.sahayakStatus == 'VERIFIED';
    }

    // Rules for the 'users' collection
    match /users/{userId} {
      // Any authenticated user can create their own profile.
      allow create: if isSignedIn() && request.auth.uid == userId;
      // Users can read their own profile. Verified Sahayaks can read any profile.
      allow get: if isOwner(userId) || isVerifiedSahayak(request.auth.uid);
      // Users can update their own profile.
      allow update: if isOwner(userId);
      // Users can delete their own profile.
      allow delete: if isOwner(userId);
      // Verified sahayaks can list users to book for them.
      allow list: if isVerifiedSahayak(request.auth.uid);
    }
    
    // Rules for the 'equipment' collection
    match /equipment/{equipmentId} {
        // Any authenticated user can view equipment listings.
        allow read: if isSignedIn();
        // Only the owner of the equipment can create, update, or delete it.
        // We check the incoming resource data, not the existing one.
        allow create, update, delete: if isSignedIn() && request.resource.data.ownerId == request.auth.uid;
    }

    // Rules for the 'bookings' collection
    match /bookings/{bookingId} {
      // Users can see bookings where they are the beneficiary, the owner, the driver, or the creator (Sahayak).
      allow get: if isSignedIn() && (
                    resource.data.beneficiary == request.auth.uid || 
                    resource.data.ownerId == request.auth.uid ||
                    resource.data.sahayakId == request.auth.uid ||
                    resource.data.driverId == request.auth.uid ||
                    resource.data.createdBy == request.auth.uid
                  );

      // Authenticated users can list bookings, but client-side queries must enforce security.
      // A more secure rule would filter by user involvement.
      allow list: if isSignedIn();

      // A user can create a booking for themselves (beneficiary is self).
      // A verified Sahayak can create a booking for another user (beneficiary is different).
      allow create: if isSignedIn() && (
                      (request.resource.data.createdBy == request.auth.uid && request.resource.data.beneficiary == request.auth.uid) ||
                      (isVerifiedSahayak(request.auth.uid) && request.resource.data.createdBy == request.auth.uid)
                    );

      // The owner, beneficiary, or creator (Sahayak) of a booking can update it.
      allow update: if isSignedIn() && (
                      resource.data.ownerId == request.auth.uid ||
                      resource.data.beneficiary == request.auth.uid ||
                      resource.data.createdBy == request.auth.uid
                    );
      
      // The owner or creator (Sahayak) can cancel/delete a booking.
      allow delete: if isSignedIn() && (
                      resource.data.ownerId == request.auth.uid ||
                      resource.data.createdBy == request.auth.uid
                    );
    }
  }
}
