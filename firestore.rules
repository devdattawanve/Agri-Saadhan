rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    match /users/{userId} {
      allow read: if isSignedIn();
      allow write: if isOwner(userId);
    }
    
    match /equipment/{equipmentId} {
      allow read: if true;
      allow create: if isSignedIn() && request.resource.data.ownerId == request.auth.uid;
      allow update, delete: if isSignedIn() && resource.data.ownerId == request.auth.uid;
    }

    match /bookings/{bookingId} {
      // Users can read a booking if they are a participant in it.
      allow get: if isSignedIn() && request.auth.uid in resource.data.participants;

      // Users can query the bookings collection if they are querying for bookings they participate in.
      // The client-side code MUST enforce this with a where() clause.
      allow list: if isSignedIn();

      // An authenticated user can create a booking request.
      // - The creator must be the one making the request.
      // - The status must be 'pending' on creation.
      // - The creator must be listed in the participants array.
      allow create: if isSignedIn()
                      && request.auth.uid == request.resource.data.createdBy
                      && request.resource.data.status == 'pending'
                      && request.auth.uid in request.resource.data.participants;

      // An owner can accept/reject a pending request.
      // The creator can cancel their own pending request.
      allow update: if isSignedIn() && resource.data.status == 'pending' &&
                      request.resource.data.diff(resource.data).affectedKeys().hasOnly(['status', 'updatedAt']) &&
                      (
                        (request.auth.uid == resource.data.ownerId && (request.resource.data.status == 'accepted' || request.resource.data.status == 'rejected')) ||
                        (request.auth.uid == resource.data.createdBy && request.resource.data.status == 'cancelled')
                      );
      
      // Bookings should not be deleted to maintain history.
      allow delete: if false;
    }
  }
}
