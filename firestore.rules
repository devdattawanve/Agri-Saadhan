rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // =================================
    // HELPER FUNCTIONS
    // =================================
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    function isCorrectEquipmentOwner(bookingData) {
        let equipmentPath = /databases/$(database)/documents/equipment/$(bookingData.equipmentId);
        return exists(equipmentPath) && 
               get(equipmentPath).data.ownerId == bookingData.ownerId;
    }

    function hasValidParticipants(bookingData) {
      return request.resource.data.participants.hasAll([bookingData.ownerId, bookingData.beneficiary, request.auth.uid]);
    }

    // =================================
    // COLLECTION RULES
    // =================================

    // USERS
    match /users/{userId} {
      allow read: if isSignedIn();
      allow write: if isOwner(userId); // Covers create, update, delete
    }
    
    // EQUIPMENT
    match /equipment/{equipmentId} {
        allow read: if true;
        allow create: if isSignedIn() && request.resource.data.ownerId == request.auth.uid;
        allow update, delete: if isSignedIn() && resource.data.ownerId == request.auth.uid;
    }

    // BOOKINGS
    match /bookings/{bookingId} {
      // A user can GET a specific document if they are a participant.
      allow get: if isSignedIn() && request.auth.uid in resource.data.participants;

      // A user can LIST bookings if they are signed in.
      // The client-side query MUST be constrained with a `where` clause to ensure
      // they only request documents they have permission to see (which is enforced by the `get` rule).
      allow list: if isSignedIn();
      
      allow create: if isSignedIn()
                      && request.resource.data.createdBy == request.auth.uid
                      && request.resource.data.status == 'pending'
                      && isCorrectEquipmentOwner(request.resource.data)
                      && hasValidParticipants(request.resource.data);

      // An owner can confirm/reject, and the creator can cancel a pending booking.
      allow update: if isSignedIn() && resource.data.status == 'pending' &&
                      request.resource.data.diff(resource.data).affectedKeys().hasOnly(['status', 'updatedAt']) &&
                      ((request.auth.uid == resource.data.ownerId && (request.resource.data.status == 'confirmed' || request.resource.data.status == 'rejected')) ||
                       (request.auth.uid == resource.data.createdBy && request.resource.data.status == 'cancelled'));
      
      allow delete: if false;
    }
  }
}
