rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // HELPER FUNCTIONS
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    // Checks if the user's profile exists AND their sahayakStatus is VERIFIED.
    function isVerifiedSahayak(userId) {
      return isSignedIn() &&
             exists(/databases/$(database)/documents/users/$(userId)) &&
             get(/databases/$(database)/documents/users/$(userId)).data.sahayakStatus == 'VERIFIED';
    }

    // Checks if the user's UID is in the booking's participants array.
    function isBookingParticipant(booking) {
        return request.auth.uid in booking.participants;
    }
    
    // Validates that the ownerId in new booking data matches the actual owner of the equipment.
    function isCorrectEquipmentOwner(bookingData) {
        let equipmentDoc = get(/databases/$(database)/documents/equipment/$(bookingData.equipmentId)).data;
        return bookingData.ownerId == equipmentDoc.ownerId;
    }

    // Validates that the participants array in new booking data is correctly formed.
    function hasValidParticipants(bookingData) {
      return request.auth.uid in bookingData.participants &&
             bookingData.beneficiary in bookingData.participants &&
             bookingData.ownerId in bookingData.participants;
    }

    // USERS
    match /users/{userId} {
      allow read: if isSignedIn();
      allow write: if isOwner(userId);
      allow list: if isVerifiedSahayak(request.auth.uid);
    }
    
    // EQUIPMENT
    match /equipment/{equipmentId} {
        allow read: if isSignedIn();
        allow create: if isSignedIn() && request.resource.data.ownerId == request.auth.uid;
        allow update, delete: if resource.data.ownerId == request.auth.uid;
    }

    // BOOKINGS
    match /bookings/{bookingId} {
      // READ / LIST
      allow get: if isSignedIn() && isBookingParticipant(resource.data);
      allow list: if isSignedIn() && request.auth.uid in request.query.where.participants;
      
      // CREATE
      allow create: if isSignedIn()
                      && request.resource.data.createdBy == request.auth.uid
                      && request.resource.data.status == 'pending'
                      && isCorrectEquipmentOwner(request.resource.data)
                      && hasValidParticipants(request.resource.data)
                      && (request.resource.data.beneficiary == request.auth.uid || isVerifiedSahayak(request.auth.uid));

      // UPDATE
      // Owner can confirm/reject a pending booking
      allow update: if isSignedIn()
                      && request.auth.uid == resource.data.ownerId
                      && resource.data.status == 'pending'
                      && (request.resource.data.status == 'confirmed' || request.resource.data.status == 'rejected')
                      && request.resource.data.diff(resource.data).affectedKeys().hasOnly(['status', 'updatedAt']);

      // Creator can cancel a pending booking
      allow update: if isSignedIn()
                      && request.auth.uid == resource.data.createdBy
                      && resource.data.status == 'pending'
                      && request.resource.data.status == 'cancelled'
                      && request.resource.data.diff(resource.data).affectedKeys().hasOnly(['status', 'updatedAt']);
    }
  }
}
